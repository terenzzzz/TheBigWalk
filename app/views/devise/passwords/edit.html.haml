
.row.justify-content-center
  .col-sm-6.col-lg-4
    .card.card-light
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        .card-header
          Change Your Password
        .card-body
          = f.error_notification
          = f.input :reset_password_token, as: :hidden
          = f.full_error :reset_password_token
          = f.input :password,label: "New Password",required: true,autofocus: true,hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),input_html: { autocomplete: "new-password" }
          = f.input :password_confirmation,label: "Confirm New Password",required: true,input_html: { autocomplete: "new-password" }
          = f.button :submit, "Change My Password", class: 'btn btn-primary w-100 mt-20'
        .card-footer
          = render "devise/shared/links"
