- content_for :title, 'Sign Up'

.row.justify-content-center
  .col-sm-8.col-lg-6
    .card.card-light
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .card-header
          Sign Up
        = f.error_notification
        .card-body
          = f.input :avatar, label: 'Add picture here:'
          = f.input :name
          = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }
          = f.input :mobile
          = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }                                          |
          = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }
          / \/ 1 is passed through if the checkbox is checked.
          = check_box_tag "opted_in", 1
          = "I want to opt in to the public leaderboard"
          
        .card-footer
          %button.btn.btn-primary.w-100{ type: :submit }
            Sign Up
          .mt-3= render "devise/shared/links"
