%h1= "Details for the #{@checkpoint.name} checkpoint on the #{@route.name} route"

= simple_form_for(@linker) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :distance_from_start, label: "Checkpoint Distance (km):"
    = f.input :advised_time, label: "Advised Time (mins):"
    = f.input :checkpoint_description, label: "Checkpoint Description:"
    
  .form-actions
    = f.button :submit, "Save", class: 'btn btn-primary primary-button'

