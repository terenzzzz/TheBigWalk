-@checkpoint = Checkpoint.where(id: @linker.checkpoint_id).first
-@route = Route.where(id: @linker.route_id).first

.d-flex.justify-content-center
  %h1.fw-bold.text-center= "#{@checkpoint.name} On The #{@route.name} Route"

= simple_form_for(@linker) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :distance_from_start, label: "Distance From The Start (Km):"
    = f.input :advised_time, label: "Advised Time To Next Checkpoint (Mins):"
    = f.input :checkpoint_description, label: "Description Of Route To The Next Checkpoint:"
    
  .form-actions
    .d-grid.gap-2
      = f.button :submit, "Save", class: 'btn btn-primary primary-button'

