.d-flex.justify-content-center
    %h1.fw-bold Incoming Walkers
%br

.d-flex.justify-content-center
    -if @needs_help.count == 1
        %p.fw-bold= "There is 1 walker far behind pace." 
    -else
        %p.fw-bold= "There are #{@needs_help.count} in need of help."

.d-flex.justify-content-center
    %table
        %tbody
            %tr
                %td.fw-bold ID Number
                %td.fw-bold Person
                %td.fw-bold Pace
            -if @needs_help
                -@needs_help.each do |walker|
                    %tr 
                        %td= walker.first.participant_id
                        %td=link_to "#{walker.last.name}", walker.last
                        %td.need-help Needs Help!!

            -if @falling_behind
                -@falling_behind.each do |walker|
                    %tr 
                        %td= walker.first.participant_id
                        %td=link_to "#{walker.last.name}", walker.last
                        %td.falling-behind Falling Behind!
                        
            -if @on_pace
                -@on_pace.each do |walker|
                    %tr
                        %td= walker.first.participant_id
                        %td=link_to "#{walker.last.name}", walker.last
                        %td.on-pace On Pace

