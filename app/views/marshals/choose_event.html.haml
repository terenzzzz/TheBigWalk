.d-flex.justify-content-center
  %h2 Choose An Event
%br/


- if @events.count == 0
  %h3 There is no event ready. Please contact Admin to Generate one.
- else 
  %h3 
  .row
    - @events.each do |event|
      .col-6
        .card.h-100
          .card-body
            .d-flex.justify-content-center
              %h5.card-title.fw-bold= event.name
            =link_to '', add_shift_marshal_path(event.id), class:'stretched-link'
  %br/
%br/

