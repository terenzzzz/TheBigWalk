.d-flex.justify-content-center
  %h1.fw-bold Change Checkpoint

.row 
  .col
    .d-flex.justify-content-center 
    = simple_form_for :search, url: search_checkpoint_marshals_path, method: :post do |f|
      = f.input :name
      = f.submit 'Search', class: "btn btn-primary primary-button btn-sm w-100 mb-2"
      = link_to 'Reset Search', change_checkpoint_marshals_path, class: "btn btn-primary primary-button btn-sm w-100"
%br

.row
  - @checkpoints.each do |checkpoint|
    .col-6.pb-3
      =link_to marshal_path(checkpoint) do
        .card.h-100
          .card-body
            - if checkpoint.id == @marshal.checkpoints_id
              %h5.card-title.fw-bold= checkpoint.name
              %h6.card-title.fw-bold Current Checkpoint
            - else
              %h5.card-title.fw= checkpoint.name
%br/



