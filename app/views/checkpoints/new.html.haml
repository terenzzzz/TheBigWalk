%h1 New Checkpoint

= simple_form_for(@checkpoint) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .form-inputs
        = f.input :name, label: "Checkpoint Name:"
        = f.input :distance, label: "Checkpoint Distance (km):"
        = f.input :location, label: "OS Grid Reference:"
        = f.input :advisedTime, label: "Advised Time (mins):"
        = f.input :description, label: "Checkpoint Description:"

    .form-actions
        = f.button :submit, "Save", class: 'btn btn-primary primary-button'
