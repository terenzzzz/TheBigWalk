%h1 Checkpoint Info

= simple_form_for(@checkpoint) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :distance
    = f.input :location
    = f.input :advisedTime
    = f.input :description

  .form-actions
    = f.button :submit, "Save", class: 'btn btn-primary primary-button'
    = link_to 'Delete', @checkpoint, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-primary primary-button'

